<%- include header %>
  <% if (name) { %>
    <p>
     欢迎 <%= name %> 登录成功!
    </p>
    <% } %>
    <% posts.forEach((post,index)=>{ %>
        <p>
          <h2>
            <a href="u/<%= post.username %>/<%= post.time.day %>/<%= post.title %>">
              <%= post.title %>
            </a>
          </h2>
        </p>
      <p class="info">
          <a href="u/<%= post.username %>"><img src="<%= post.head %>" class="r_head" /></a>|
        作者:<a href="u/<%= post.username %>"><%= post.username %> </a>|
        日期:<%= post.time.minute %>|
        标签:
        <% post.tags.forEach((tag,index)=>{
          if(tag) %>
          <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>        
      <%})%>
      </p>
      <p> <%- post.post %></p>
      <p class="info">阅读:<%= post.pv||0 %>|评论:<%= post.comments.length ||0 %></p>
      <% }) %>
  <%- include padding %>
<%- include footer %>