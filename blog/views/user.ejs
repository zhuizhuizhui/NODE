<%- include header %>
    <% posts.forEach(function (post, index) { %>
        <p>
            <h2>
                <a href="/u/<%= post.username %>/<%= post.time.day %>/<%= post.title %>">
                    <%= post.title %>
                </a>
            </h2>
        </p>
        <p class="info">
            作者：
            <a href="/u/<%= post.username %>">
                <%= post.username %>
            </a> | 日期：
            <%= post.time.minute %>|
            标签:
            <% post.tags.forEach((tag,index)=>{
                if(tag) %>
                <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>        
            <%})%>
        </p>
        <p>
            <%- post.post %>
        </p>
        <p class="info">阅读:<%= post.pv||0 %>|评论:<%= post.comments.length ||0 %></p>
        <% }) %>
        <%- include padding %>
            <%- include footer %>